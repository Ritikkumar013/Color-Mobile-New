{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", 
    "esModuleInterop": true,
    
    "strict": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts", 
    "app/Otp.tsx"
  ]
}
